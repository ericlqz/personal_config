!! Configuration for rxvt-unicode
!! Commentary:
!! To enable it after changed, use this command:
!! xrdb -load ~/.Xresources
 
!!! Code:
 
 
!! Xft.dpi:    96
 
!! general setting
Rxvt.geometry:      80x24
Rxvt.visualBell:    False
Rxvt.termName:      rxvt
 
!! color theme
!! dark theme
Rxvt.background:    black 
Rxvt.foreground:    green
Rxvt.colorBD:       yellow
Rxvt.colorIT:       magenta
Rxvt.colorUL:       green
Rxvt.underlineColor:cyan
Rxvt.tintColor:     gray
Rxvt.cursorColor:   white
Rxvt.shading:       100
 
!! title
Rxvt.title:                 rxvt-unicode
!! scrollBar
!! Rxvt.scrollBar:             False
!! Rxvt.scrollstyle:           next
Rxvt.scrollstyle:           rxvt
Rxvt.scrollBar_right:       True
Rxvt.scrollBar_floating:    True
Rxvt.scrollTtyOutput:       True
Rxvt.scrollTtyKeypress:     True
 
!! cursor
Rxvt.cursorBlink:           True
Rxvt.pointerBlank:          True
Rxvt.externalBorder:        True
 
!! coding
Rxvt.multichar_encoding:    utf-8
Rxvt.imLocale:              zh_CN.UTF-8
 
Rxvt.menu:              /etc/X11/rxvt.menu
!! set the artificial transparency
!! Rxvt.inheritPixmap:        True
Rxvt.transparency:      255
 
Rxvt.saveLines:             1000
Rxvt.preeditType:           Root
Rxvt.borderLess:            False

!! turn on URL browsing support
!! please refer to: http://www.leninlee.cn/?p=384
URxvt.urlLauncher:          chromium
URxvt.matcher.button:       1
!! URxvt.perl-ext-common:      matcher
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: False
URxvt.perl-ext-common: default,clipboard
 
!! multi-tab
!! URxvt.perl-ext-common: default,tabbed
 
!! font
Rxvt.font:           xft:Vera Sans YuanTi Mono:size=14:antialias=true
Rxvt.boldFont:       xft:Vera Sans YuanTi Mono:size=14:Bold:antialias=true
Rxvt.italicFont:     xft:Vera Sans YuanTi Mono:size=14:Italic:antialias=true
Rxvt.boldItalicFont: xft:Vera Sans YuanTi Mono:size=14:Bold Italic:antialias=true
urxvt.letterSpace:-2
 
!! redefine color to use tango theme in vim
!! Black
URxvt.color0:           #000000
URxvt.color8:           #555753
!! Rd
URxvt.color1:           #CC0000
URxvt.color9:           #EF2929
!! Green
URxvt.color2:           #4E9A06
URxvt.color10:          #8AE234
!! Yellow
URxvt.color3:           #C4A000
URxvt.color11:          #FCE94F
!! Blue
URxvt.color4:           #3465A4
URxvt.color12:          #729FCF
!! Magenta
URxvt.color5:           #75507B
URxvt.color13:          #AD7FA8
!! Cyan
URxvt.color6:           #06989A
URxvt.color14:          #34E2E2
!! White
URxvt.color7:           #D3D7CF
URxvt.color15:          #EEEEEC
